<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane fx:id="anchorPane" minHeight="400.0" minWidth="700.0" prefHeight="700.0" prefWidth="1200.0"
            styleClass="view-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.savingprivatenitti.controllers.view.WelcomeViewController">
    <children>
        <VBox alignment="CENTER" layoutX="656.0" layoutY="240.0" minHeight="100.0" minWidth="200.0" prefHeight="240.0"
              prefWidth="400.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="656.0"
              AnchorPane.rightAnchor="144.0" AnchorPane.topAnchor="0.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="welcome-headline" text="Money Mate"
                      textAlignment="CENTER" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </Text>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="h2" text="Your Trusty Finance Companion!">
                    <VBox.margin>
                        <Insets top="15.0" bottom="40.0"/>
                    </VBox.margin>
                </Text>
                <HBox alignment="CENTER" minHeight="50.0" minWidth="200.0" prefHeight="50.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="loginButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                onAction="#onLoginButtonClicked" styleClass="secondary-button" prefHeight="35.0"
                                prefWidth="130.0" text="Log in" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets right="8.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="signUpButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                onAction="#onSignUpButtonClicked" styleClass="neutral-button" prefHeight="35.0"
                                prefWidth="130.0" text="Sign up" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets left="8.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
        <VBox fx:id="vbox" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="100.0"
              AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="714.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <ImageView fx:id="imageView" fitHeight="700.0" fitWidth="486.0" VBox.vgrow="ALWAYS">
                    <image>
                        <Image url="@../../images/wallpaper.jpg"/>
                    </image>
                </ImageView>
            </children>
        </VBox>
    </children>
</AnchorPane>
